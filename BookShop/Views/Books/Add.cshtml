@model BookShop.Models.AddBookViewModel

<h1>Add Books</h1>
<form  method="post">
    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />

    </div>

    <div class="mt-3">
        <label class="form-label">Descriiption</label>
        <input type="text" class="form-control" asp-for="Description" />

    </div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="price" />

    </div>

    <div class="mt-3">

        <input type="checkbox" class="form-check-input" id="Available" asp-for="Available" />
        <label class="form-check-label" for="Available">Available</label>

    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>
